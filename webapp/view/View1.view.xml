<mvc:View controllerName="ovly.app.controller.View1"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page"
        title="{i18n>view1_title}">
        <content>
            <List items="{/data}">
                <items>
                    <StandardListItem title="{full_name}"
                        description="{city}"
                        info="{conference}" />
                </items>
            </List>
        </content>
    </Page>
</mvc:View>